<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.teamstream-win32"
       name="Teamstream.to"
       version="0.2.0"
       provider-name="siriuz">
  <requires>
    <import addon="xbmc.python" version="1.0" />
	<import addon="script.module.lxml-win32" version="3.1.2" />
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="teamstream.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>windx wingl</platform>
    <summary>Live-TV powered by Teamstream.to</summary>
    <description>
Kurzanleitung:
--------------------------------------------------------------------------------
* Besorg dir einen Account bei Teamstream.to
* Hol dir den Elite Zugang
* Update deine librtmp.dll (siehe README)
* Username und Passwort in den Addon Settings eingeben!
* Viel Spa√ü beim Sky schauen ;)
    </description>
  </extension>
</addon>

<addon id="repository.addons.siriuz" name="Siriuz Add-on Repository" version="1.0.0" provider-name="siriuz">
	<extension point="xbmc.addon.repository" name="Siriuz Add-on Repository">
		<info compressed="false">https://raw.github.com/siriuzwhite/xbmc.repository/master/repository/addons.xml</info>
		<checksum>https://raw.github.com/siriuzwhite/xbmc.repository/master/repository/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.github.com/siriuzwhite/xbmc.repository/master/repository/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install Addons from github.com/siriuzwhite</summary>
		<description>Download and install addons from siriuzwhite repository.</description>
		<platform>all</platform>
	</extension>
</addon>

<addon id="script.module.lxml-win32"
       name="Python lxml library"
       version="3.1.2"
       provider-name="siriuz">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
  </requires>
  <extension point="xbmc.python.module"
             library="lib" />
  <extension point="xbmc.addon.metadata">
    <platform>wingl windx</platform>
  </extension>
</addon>
</addons>
